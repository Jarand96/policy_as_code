      "/subscriptions/41566279-17a3-43ac-8109-b84d64c819d2/providers/Microsoft.Authorization/policyDefinitions/audit-resourcegroup-tags": {
        "description": "This policy audits resource groups to ensure they have a specific tag, such as 'costCenter'.",
        "id": "/subscriptions/41566279-17a3-43ac-8109-b84d64c819d2/providers/Microsoft.Authorization/policyDefinitions/audit-resourcegroup-tags",
        "parameters": {
          "tagName": {
            "type": "String",
            "metadata": {
              "displayName": "Tag Name",
              "description": "Name of the tag to audit for on the resource group (e.g., 'costCenter')."
            },
            "defaultValue": "Department"
          }
        },
        "metadata": {
          "deployedBy": "epac/bd715eb8-36d2-4d33-8db0-505e04c0e4aa/EPAC-DEV",
          "pacOwnerId": "bd715eb8-36d2-4d33-8db0-505e04c0e4aa"
        },
        "name": "audit-resourcegroup-tags",
        "policyRule": {
          "if": {
            "allOf": [
              {
                "field": "type",
                "equals": "Microsoft.Resources/subscriptions/resourceGroups"
              },
              {
                "field": "[concat('tags[', parameters('tagName'), ']')]",
                "exists": "false"
              }
            ]
          },
          "then": {
            "effect": "audit"
          }
        },
        "version": null,
        "scopeId": "/subscriptions/41566279-17a3-43ac-8109-b84d64c819d2",
        "mode": "All",
        "displayName": "Audit for a specific tag on resource groups"
      }
    },
